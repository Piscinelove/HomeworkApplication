<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_homework_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_homework_date"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:background="@color/colorBlue"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:text="date"
        android:gravity="fill"
        android:layout_below="@+id/tv_homework_header"
        />


    <TextView
        android:id="@+id/tv_homework_name"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/tv_homework_date"
        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingTop="5dp"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:text="Pseudo"
        android:layout_toRightOf="@+id/tv_homework_date"
        android:layout_toEndOf="@+id/tv_homework_date" />




</RelativeLayout>