<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.audreycelia.homeworkapp.AddTeacherFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_edit_teacher_teacher"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_above="@+id/tv_edit_teacher_firstname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorBlue"
            android:gravity="bottom"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/tv_edit_teacher_firstname"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="Firstname"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_above="@+id/tv_edit_teacher_lastname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/et_edit_teacher_firstname"
            android:layout_toStartOf="@+id/et_edit_teacher_firstname" />

        <EditText
            android:id="@+id/et_edit_teacher_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_edit_teacher_firstname"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/tv_edit_teacher_lastname"
            android:layout_toRightOf="@+id/tv_edit_teacher_lastname"
            android:enabled="false"
            android:ems="10"
            android:layout_below="@+id/iv_edit_teacher_teacher" />

        <TextView
            android:id="@+id/tv_edit_teacher_lastname"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/tv_edit_teacher_phone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/et_edit_teacher_lastname"
            android:layout_toStartOf="@+id/et_edit_teacher_lastname"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="Lastname"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_edit_teacher_phone"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/tv_edit_teacher_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/et_edit_teacher_phone"
            android:layout_toStartOf="@+id/et_edit_teacher_phone"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="Phone"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_edit_teacher_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_edit_teacher_email"
            android:layout_alignTop="@+id/tv_edit_teacher_phone"
            android:layout_toEndOf="@+id/tv_edit_teacher_email"
            android:layout_toRightOf="@+id/tv_edit_teacher_email"
            android:ems="10"
            android:enabled="false"
            android:inputType="phone" />


        <EditText
            android:id="@+id/et_edit_teacher_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_edit_teacher_phone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_edit_teacher_lastname"
            android:layout_toEndOf="@+id/tv_edit_teacher_phone"
            android:layout_toRightOf="@+id/tv_edit_teacher_phone"
            android:enabled="false"
            android:ems="10" />

        <TextView
            android:id="@+id/tv_edit_teacher_email"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_above="@+id/tv_add_homework_description"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="Email"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_edit_teacher_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_edit_teacher_email"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_edit_teacher_phone"
            android:layout_toEndOf="@+id/tv_edit_teacher_email"
            android:layout_toRightOf="@+id/tv_edit_teacher_email"
            android:ems="10"
            android:enabled="false"
            android:inputType="textEmailAddress" />


        <TextView
            android:id="@+id/tv_add_homework_description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom"
            android:padding="10dp"
            android:text="Description"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:layout_above="@+id/et_edit_teacher_description"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_edit_teacher_description"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:ems="30"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:layout_above="@+id/bt_add_homework_save"
            android:layout_alignParentLeft="true"
            android:enabled="false"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/bt_add_homework_save"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorAccent"
            android:text="EDIT"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonSave_edit_teacher"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorAccent"
            android:text="SAVE"
            android:textColor="@android:color/white"
            android:visibility="invisible" />

        <Button
            android:id="@+id/buttonDelete_edit_teacher"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/buttonSave_edit_teacher"
            android:layout_toRightOf="@+id/buttonSave_edit_teacher"
            android:background="@color/colorRed"
            android:text="DELETE"
            android:textColor="@android:color/white"
            android:visibility="invisible" />


    </RelativeLayout>

</FrameLayout>
